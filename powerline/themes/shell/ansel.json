{
    "segments": {
        "above": [
            {
                "left": [
                    {
                        "function": "powerline.segments.common.net.hostname",
                        "priority": 10
                    },
                    {
                        "function": "powerline.segments.shell.cwd",
                        "priority": 10,
                        "args": {
                            "ellipsis": "..."
                        }
                    },
                    {
                        "function": "powerline.segments.shell.jobnum",
                        "priority": 20
                    },
                    {
                        "function": "powerline.segments.shell.last_status",
                        "priority": 10
                    }
                ]
            }
        ],
        "left": [
            {
                "type": "string",
                "contents": "$",
                "highlight_groups": ["prompt"]
            }
        ]
    }
}
